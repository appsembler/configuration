{% if EDXAPP_CELERY_BEAT_LMS_CONFIG.enabled %}
[program:lms_celerybeat]

environment=LOGLEVEL=info,DJANGO_SETTINGS_MODULE={{ worker_django_settings_module }},PYTHONPATH={{ edxapp_code_dir }},SERVICE_VARIANT=lms,BOTO_CONFIG="{{ edxapp_app_dir }}/.boto"
user={{ common_web_user }}
directory={{ edxapp_code_dir }}
stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log

command={{ edxapp_app_dir }}/celerybeat.sh beat --app=lms.celery:APP --loglevel=info --pidfile={{ EDXAPP_CELERY_BEAT_LMS_CONFIG.process_id }} --schedule {{ EDXAPP_CELERY_BEAT_LMS_CONFIG.schedule_file }}

stopwaitsecs={{ EDXAPP_CELERY_BEAT_LMS_CONFIG.stopwaitsecs | default(EDXAPP_WORKER_DEFAULT_STOPWAITSECS) }}
{% endif -%}
